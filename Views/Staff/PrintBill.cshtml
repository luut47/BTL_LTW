@model BTL_LTW.Models.Order
@{
    ViewData["Title"] = "Print Bill";
}
<div style="max-width:600px;margin:20px auto;font-family:Arial;">
    <h2>Hoá đơn nhà hàng</h2>
    <div>
    <img src="~/images/qr.jpg" alt="qr" style="width:30%; height:auto; border-radius:6px; display:block; margin:auto;">
    </div>
    <div><strong>Mã đơn:</strong> @Model.TableToken</div>
    <div><strong>Order id:</strong> @Model.Id</div>
    <div><strong>Khách:</strong> @Model.CustomerName - @Model.CustomerPhone</div>
    <div><strong>Địa chỉ:</strong> @Model.CustomerAddress</div>
    <div><strong>Bàn:</strong> @(Model.AssignedTable ?? "Chưa xếp")</div>
    <div><strong>Thời gian:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>

    <hr />
    <table style="width:100%;border-collapse:collapse;">
        <thead>
            <tr>
                <th style="text-align:left">Món</th>
                <th>Số</th>
                <th style="text-align:right">Đơn giá</th>
                <th style="text-align:right">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.MenuItemName</td>
                    <td>@it.Qty</td>
                    <td style="text-align:right">@it.UnitPrice.ToString("N0")</td>
                    <td style="text-align:right">@((it.UnitPrice * it.Qty).ToString("N0"))</td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div style="text-align:right;font-size:18px;">
        <strong>Tổng: @Model.Total.ToString("N0") VND</strong>
    </div>

    <div style="margin-top:12px;">
        <strong>Trạng thái thanh toán:</strong>
        @if (Model.IsPaid)
        {
            <span style="color:green;">
                Đã thanh toán (@(Model.PaymenMethod ?? "Không rõ"))
            </span>
        }
        else
        {
            <span style="color:red;">Chưa thanh toán</span>
        }
    </div>

    @* Thông báo sau khi thanh toán *@
    @if (TempData["PaymentMessage"] != null)
    {
        <div style="margin-top:8px;padding:8px;border:1px solid #cce5ff;background:#e9f5ff;color:#004085;">
            @TempData["PaymentMessage"]
        </div>
    }

    <div style="margin-top:20px;">
        <button onclick="window.print()">In hoá đơn</button>

        @* Nút thanh toán: chỉ hiện khi chưa thanh toán *@
        @if (!Model.IsPaid)
        {
            <form asp-controller="Staff"
                  asp-action="ProcessPayment"
                  method="post"
                  style="display:inline-block;margin-left:8px;">
                <input type="hidden" name="id" value="@Model.Id" />

                <button type="submit"
                        name="method"
                        value="cash"
                        style="margin-right:6px;">
                    Thanh toán tiền mặt
                </button>

                <button type="submit"
                        name="method"
                        value="bank">
                    Thanh toán chuyển khoản
                </button>
            </form>
        }

        <a href="/Staff" style="margin-left:12px;">Quay lại</a>
    </div>
</div>
