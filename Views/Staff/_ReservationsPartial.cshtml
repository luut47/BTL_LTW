@model List<BTL_LTW.Models.Reservation>
@{
    var tables = ViewBag.Tables as List<BTL_LTW.Models.TableInfo>;
    var freeTables = tables?.Where(t => !t.IsOccuped).ToList() ?? new List<BTL_LTW.Models.TableInfo>();
}
<table class="table table-sm">
    <thead>
        <tr>
            <th>Thời điểm đặt</th>
            <th>Khách</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Ngày/giờ đến</th>
            <th>Số người</th>
            <th>Ghi chú</th>
            <th>Bàn</th>
            <th>Chọn đồ</th>
            <th>Hóa đơn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.CreatedAt.ToLocalTime():g</td>
                <td>@r.CustomerName</td>
                <td>@r.Phone</td>
                <td>@r.Email</td>
                <td>@r.DateTime.ToLocalTime():g</td>
                <td>@r.People</td>
                <td>@r.Note</td>

                <td>
                    @if (string.IsNullOrEmpty(r.AssignedTable))
                    {
                        // GÁN BÀN
                        if (freeTables.Any())
                        {
                            <form method="post" action="/Staff/AssignTableReservation" class="d-inline">
                                <input type="hidden" name="reservationId" value="@r.Id" />
                                <select name="tableId" class="form-select form-select-sm d-inline-block" style="width:auto;">
                                    @foreach (var t in freeTables)
                                    {
                                        <option value="@t.Id">@t.Id</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-primary" type="submit">Gán bàn</button>
                            </form>
                        }
                        else
                        {

                            <span class="text-danger">Hết bàn trống</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-success">Bàn: @r.AssignedTable</span>
                        <form method="post" action="/Staff/ReleaseTableReservation" class="d-inline ms-2">
                            <input type="hidden" name="reservationId" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-danger" type="submit">Hủy gán</button>
                        </form>
                    }
                </td>

                <td>
                    @* NÚT CHỌN ĐỒ → /Menu *@
                    @if (!string.IsNullOrEmpty(r.AssignedTable) && string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <button type="button"
                                class="btn btn-sm btn-primary choose-food"
                                data-id="@r.Id"
                                data-name="@r.CustomerName"
                                data-phone="@r.Phone"
                                data-email="@r.Email"
                                data-table="@r.AssignedTable">
                          Chọn đồ
                        </button>
                    }
                    else if (!string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <span class="text-muted">Đã có order</span>
                    }
                    else
                    {
                        <span class="text-muted">Gán bàn trước</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <a class="btn btn-sm btn-outline-secondary" target="_blank" href="/Staff/PrintBill?id=@r.LinkOrderId">In bill</a>
                        <form method="post" action="/Staff/CompletedOrder" class="d-inline">
                            <input type="hidden" name="id" value="@r.LinkOrderId" />
                            <button type="submit" class="btn btn-sm btn-success">Hoàn tất</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có order</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        // Nút CHỌN ĐỒ → chuyển sang /Menu và nạp sẵn localStorage
        document.addEventListener('click', function(e){
          if (!e.target.classList.contains('choose-food')) return;
          const btn = e.target;
          const resid = btn.dataset.id;
          const name  = btn.dataset.name || '';
          const phone = btn.dataset.phone || '';
          const email = btn.dataset.email || '';
          const table = btn.dataset.table || '';

          // Lưu thông tin khách vào localStorage như luồng Home
          const customer = { name, phone, address: email, token: table };
          localStorage.setItem('customer', JSON.stringify(customer));
          localStorage.setItem('currentReservationId', resid);  // để Menu gửi kèm
          localStorage.removeItem('cart');                      // tuỳ bạn có muốn xoá giỏ cũ

          // Điều hướng tới Menu (khách tự xem & thêm món)
          window.location.href = '/Menu?res=' + encodeURIComponent(resid);
        });
    </script>
}