@model List<BTL_LTW.Models.Reservation>
@using BTL_LTW.Models
@{
    var tables = ViewBag.Tables as List<BTL_LTW.Models.TableInfo>;
    var freeTables = tables?.Where(t => !t.IsOccuped).ToList() ?? new List<BTL_LTW.Models.TableInfo>();
    var map = ViewBag.OrdersByReservation as Dictionary<string, Order>;
}
<table class="table table-sm">
    <thead>
        <tr>
            <th>Thời điểm đặt</th>
            <th>Khách</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Ngày/giờ đến</th>
            <th>Số người</th>
            <th>Ghi chú</th>
            <th>Bàn</th>
            <th>Chọn đồ</th>
            @* <th>Hóa đơn</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.CreatedAt.ToLocalTime():g</td>
                <td>@r.CustomerName</td>
                <td>@r.Phone</td>
                <td>@r.Email</td>
                <td>@r.DateTime.ToLocalTime():g</td>
                <td>@r.People</td>
                <td>@r.Note</td>

                <td>
                    @if (string.IsNullOrEmpty(r.AssignedTable))
                    {
                        // GÁN BÀN
                        if (freeTables.Any())
                        {
                            <form method="post" action="/Staff/AssignTableReservation" class="d-inline">
                                <input type="hidden" name="reservationId" value="@r.Id" />
                                <select name="tableId" class="form-select form-select-sm d-inline-block" style="width:auto;">
                                    @foreach (var t in freeTables)
                                    {
                                        <option value="@t.Id">@t.Id</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-primary" type="submit">Gán bàn</button>
                            </form>
                        }
                        else
                        {

                            <span class="text-danger">Hết bàn trống</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-success">Bàn: @r.AssignedTable</span>
                        <form method="post" action="/Staff/ReleaseTableReservation" class="d-inline ms-2">
                            <input type="hidden" name="reservationId" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-danger" type="submit">Hủy gán</button>
                        </form>
                    }
                </td>

                <td>
                    @* NÚT CHỌN ĐỒ → /Menu *@
                    @if (!string.IsNullOrEmpty(r.AssignedTable) && string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <button type="button"
                                class="btn btn-sm btn-primary btn-choose-food"
                                data-id="@r.Id"
                                data-name="@r.CustomerName"
                                data-phone="@r.Phone"
                                data-email="@r.Email"
                                data-table="@r.AssignedTable">
                            Chọn đồ
                        </button>
                    }
                    else if (!string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <span class="text-muted">Đã có order</span>
                    }
                    else
                    {
                        <span class="text-muted">Gán bàn trước</span>
                    }

                </td>
                <td>
                    @if (string.IsNullOrEmpty(r.LinkOrderId))
                    {
                        <span class="text-muted">Chưa có order</span>
                    }
                </td>

                @{
                    Order order = null;
                    if (map != null && map.TryGetValue(r.Id, out var od))
                    {
                        order = od;
                    }
                }
                @if (order != null)
                {
                <tr>
                    <td colspan="7" style="background:#fafafa;">
                        <div style="font-weight:600;">Order của bàn đặt này:</div>
                        <div><strong>Order:</strong> @order.Id - <strong>Trạng thái:</strong> @order.Status</div>
                        <div>Khách: @order.CustomerName - @order.CustomerPhone</div>
                        <div>Thời gian: @order.CreatedAt.ToLocalTime():g</div>
                        <ul>
                            @foreach (var it in order.Items)
                            {
                                <li>@it.MenuItemName - x@it.Qty - @it.UnitPrice.ToString("N0")</li>
                            }
                        </ul>
                        <div><strong>Tổng:</strong> @order.Total.ToString("N0") VND</div>
                        <a class="btn btn-sm btn-outline-secondary" target="_blank" href="/Staff/PrintBill?id=@order.Id">In bill</a>
                        @if (!order.IsCompleted)
                        {
                            <form method="post" action="/Staff/CompletedOrder" class="d-inline ms-2">
                                <input type="hidden" name="id" value="@order.Id" />
                                <input type="hidden" name="returnTo" value="reservations" />
                                <button type="submit" class="btn btn-sm btn-success">Hoàn tất</button>
                            </form>
                        }
                    </td>
                </tr>
            }

            </tr>
        }
    </tbody>
</table>
