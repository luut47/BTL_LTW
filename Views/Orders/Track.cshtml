@model BTL_LTW.Models.Order   

@{
    ViewData["Title"] = "Theo dõi đơn";
}

<h2>Theo dõi đơn hàng</h2>

<div id="order-track-root">

    <div class="order-track-card">
        <div><strong>Mã đơn:</strong> @Model.TableToken</div>
        <div><strong>Trạng thái:</strong> <span id="order-status-text">@Model.Status</span></div>
        <div><strong>Thời gian tạo:</strong> @Model.CreatedAt.ToLocalTime():g</div>

        <h4>Chi tiết món</h4>
        <ul id="order-items-list">
            @foreach (var it in Model.Items)
            {
                <li>@it.MenuItemName - x@it.Qty</li>
            }
        </ul>

        <div class="order-total-row">
            <strong>Tổng: @Model.Total.ToString("N0") VND</strong>
        </div>

        <div id="order-track-extra">
            @* chỗ này JS có thể update trạng thái: đang chế biến / đã xong / closed *@
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/orders-track.css" />
}

@section Scripts {
    <script>
        // truyền mã đơn cho JS nếu cần poll
        window.orderTrackConfig = {
            orderId: '@Model.Id'
        };
    </script>
    <script src="~/js/orders-track.js"></script>
}
