@model List<BTL_LTW.Models.Order>

@if (Model == null || !Model.Any())
{
    <div class="kitchen-empty">Không có đơn nào.</div>
}
else
{
    <div class="kitchen-list">
        @foreach (var o in Model)
        {
            <div class="kitchen-order" data-id="@o.Id">
                <div class="kitchen-order-header">
                    <span><strong>Mã:</strong> @o.TableToken</span>
                    <span><strong>Trạng thái:</strong> @o.Status</span>
                </div>
                <div class="kitchen-order-body">
                    <div>Khách: @o.CustomerName - @o.CustomerPhone</div>
                    <ul>
                        @foreach (var it in o.Items)
                        {
                            <li>@it.MenuItemName - @it.Qty</li>
                        }
                    </ul>
                </div>
                <div class="kitchen-order-actions">
                    @* Ví dụ các nút bếp đang dùng *@
                    <button class="btn-kitchen btn-start" data-id="@o.Id">Bắt đầu</button>
                    <button class="btn-kitchen btn-done" data-id="@o.Id">Done</button>
                    <button class="btn-kitchen btn-cancel" data-id="@o.Id">Hủy</button>
                </div>
            </div>
        }
    </div>
}
